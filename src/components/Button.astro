---
interface Props {
    label: string;
    href?: string;
}
const { label, href, class: className, ...rest } = Astro.props;
---

<a class:list={[
        "flex gap-2 justify-center py-2 px-4 rounded-sm",
        "hover:bg-secondary transition-colors ease-in-out duration-200 cursor-pointer",
        className]} href={href} {...rest}>
    <slot />
    <span class="whitespace-nowrap">{label}</span>
</a>