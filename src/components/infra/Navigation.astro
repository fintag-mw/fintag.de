---
import { Image, Picture } from 'astro:assets';
import logoSvg from "./logo.svg"
import logoDarkSvg from "./logo-dark.svg"
import Dropdown from "../Dropdown.astro";
import Sitelinks from "./_sitelinks.astro";
---

<header class="bg-base-300 text-text px-4 gap-x-4 lg:pl-24 xl:pr-24 flex justify-between items-center shadow-xs shadow-black/30 sticky top-0">
    <Image src={logoSvg} alt="fintag" class="w-36 my-4 dark:hidden" loading="eager" />
    <Image src={logoDarkSvg} alt="fintag" class="w-36 my-4 hidden dark:block" loading="eager" />

    <nav class="text-primary grid">
        <ul class="hidden md:flex py-4 overflow-x-auto">
            <Sitelinks />
        </ul>
        <Dropdown class="md:hidden">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                 class="size-10 p-2 bg-primary text-primary-content rounded-xs">
                <path fill-rule="evenodd" d="M3 6.75A.75.75 0 0 1 3.75 6h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 6.75ZM3 12a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 12Zm0 5.25a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75a.75.75 0 0 1-.75-.75Z" clip-rule="evenodd" />
            </svg>
            <ul slot="dropdown">
                <Sitelinks />
            </ul>
        </Dropdown>
    </nav>
</header>