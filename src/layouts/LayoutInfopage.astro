---
import Layout from "./Layout.astro";
const {frontmatter} = Astro.props;
---

<Layout title={`fintag - ${frontmatter.title}`} description={frontmatter.description}>

    <main class="mx-auto px-4 lg:px-24 container my-6">
        <section class:list={[
            "prose prose-neutral dark:prose-invert lg:prose-lg max-w-none",
            "hyphens-auto break-words",
            "prose-hr:my-3",
            "prose-p:leading-relaxed prose-p:my-2",
            "prose-li:leading-tight prose-li:m-0 prose-li:mb-2 prose-ul:list-square",
            "prose-h1:text-3xl md:prose-h1:text-5xl prose-h1:mb-3 prose-h1:mt-6",
            "prose-h2:text-2xl md:prose-h2:text-4xl prose-h2:mb-2 prose-h2:mt-4",
            "prose-h3:text-xl md:prose-h2:text-3xl prose-h2:mb-1 prose-h2:mt-3",
            "prose-li:leading-tight prose-li:m-0 prose-li:mb-2",
            "prose-ul:list-square marker:prose-ul:text-primary",
            "marker:prose-ol:text-text",
        ]} lang="de-de">
            <slot />
        </section>
    </main>
</Layout>
